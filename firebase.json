{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/tic-tac-toe",
                "run": {
                    "serviceId": "tic-tac-toe",
                    "region": "europe-west1"
                }
            },
            {
                "source": "/tic-tac-toe/**",
                "run": {
                    "serviceId": "tic-tac-toe",
                    "region": "europe-west1"
                }
            },
            {
                "source": "/corridor",
                "run": {
                    "serviceId": "corridor",
                    "region": "europe-west1"
                }
            },
            {
                "source": "/corridor/**",
                "run": {
                    "serviceId": "corridor",
                    "region": "europe-west1"
                }
            }
        ]
    }
}